
{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "allowJs": true,
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "lib",
      "es",
      "dist",
      "typings",
      "**/__test__",
      "test",
      "docs",
      "tests"
    ]
}
