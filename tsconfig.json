
{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "module": "ESNext",
        "lib": ["DOM","ES6", "ESNext"],
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "lib",
      "es",
      "dist",
      "typings",
      "**/__test__",
      "test",
      "docs",
      "tests"
    ]
}
